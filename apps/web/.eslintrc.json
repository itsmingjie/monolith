{
  "root": true,
  "extends": [
    "standard",
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["tailwindcss"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/consistent-type-imports": "error"
  },
  "settings": {
    "tailwindcss": {
      "callees": ["cx"]
    }
  }
}
